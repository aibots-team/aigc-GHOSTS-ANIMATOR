@model List<Ghosts.Animator.Api.Infrastructure.Social.SocialGraph>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <title>Social Graph < GHOSTS ANIMATOR</title>
    <link rel="stylesheet" type="text/css" href="/relationships/inspector.css"/>
</head>
<body>
<div class="container bootstrap snippet">
    <div class="row">
        <div class="col-sm-12">
            <h1 id="animator-build-relationship">Social Graph Agents</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            @if (!ViewBag.IsEnabled)
            {
                <div>Sorry, but social graph does not appear to be enabled</div>
            }
            else
            {
                foreach(var x in Model)
                {
                    <div>
                        <a href="view-social/@x.Id">
                            <img src="/api/npcs/@x.Id/photo" height="16" width="16"/>
                            @x.Name
                        </a>
                    </div>
                }
            }
        </div>
    </div>
</div>
</body>
</html>